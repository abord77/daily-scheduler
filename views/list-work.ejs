<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
    <h3> <%= date %> </h3>
  </div>

  <div class="box">
    <% if (locals.tasksPersonal) { %>
      <% for (let i = 0; i < tasksWork.length; i++) { %>
        <div class="item">
          <input type="checkbox">
          <p><%=  tasksWork[i]  %></p>
        </div>
      <% } %>
    <% } %>

      <form class="item" action="/work" method="POST">
        <input type="text" name="taskName" placeholder="Task..." />
        <button type="submit" name="list">+</button>
      </form>
  </div>

  <div class="box">
    <button onclick="location.href='/personal'">Click me</button>
    <button onclick="location.href='/weather'">Click me</button>
  </div>

<%- include("footer") -%>
